#include <fcntl.h>
#include <unistd.h>
#include <stdio.h>

int main() {
    int src, dest;
    char buffer[100];
    ssize_t bytes;

    src = open("source.txt", O_RDONLY);
    if (src < 0) {
        printf("Source file not found\n");
        return 1;
    }

    dest = open("copy.txt", O_WRONLY | O_CREAT, 0644);
    while ((bytes = read(src, buffer, sizeof(buffer))) > 0) {
        write(dest, buffer, bytes);
    }

    close(src);
    close(dest);
    printf("File copied successfully\n");
    return 0;
}
