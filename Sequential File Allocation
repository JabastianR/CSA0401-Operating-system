#include <stdio.h>

int main() {
    int files[50], start, len, n, i, j;
    for (i = 0; i < 50; i++)
        files[i] = 0;

    printf("Enter number of files to allocate: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter starting block and length of file %d: ", i + 1);
        scanf("%d%d", &start, &len);
        int flag = 0;
        for (j = start; j < (start + len); j++) {
            if (files[j] == 1) {
                flag = 1;
                break;
            }
        }
        if (flag == 0) {
            for (j = start; j < (start + len); j++)
                files[j] = 1;
            printf("File allocated from block %d to %d\n", start, start + len - 1);
        } else {
            printf("File cannot be allocated. Block %d already in use.\n", j);
        }
    }

    printf("\nBlock Status:\n");
    for (i = 0; i < 50; i++)
        printf("%d ", files[i]);
    printf("\n");
    return 0;
}
