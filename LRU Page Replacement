#include <stdio.h>

int findLRU(int time[], int n) {
    int i, min = time[0], pos = 0;
    for (i = 1; i < n; i++)
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    return pos;
}

int main() {
    int no_pages, no_frames, pages[30], frames[10];
    int time[10], counter = 0, faults = 0;
    printf("Enter number of pages: ");
    scanf("%d", &no_pages);
    printf("Enter reference string: ");
    for (int i = 0; i < no_pages; i++)
        scanf("%d", &pages[i]);
    printf("Enter number of frames: ");
    scanf("%d", &no_frames);

    for (int i = 0; i < no_frames; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\n");
    for (int i = 0; i < no_pages; i++) {
        int flag = 0;
        for (int j = 0; j < no_frames; j++) {
            if (frames[j] == pages[i]) {
                counter++;
                time[j] = counter;
                flag = 1;
            }
        }
        if (!flag) {
            int pos = -1;
            for (int j = 0; j < no_frames; j++)
                if (frames[j] == -1) { pos = j; break; }

            if (pos == -1)
                pos = findLRU(time, no_frames);

            counter++;
            frames[pos] = pages[i];
            time[pos] = counter;
            faults++;
        }

        printf("%d\t", pages[i]);
        for (int j = 0; j < no_frames; j++)
            if (frames[j] != -1)
                printf("%d ", frames[j]);
        printf("\n");
    }
    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
