#include <stdio.h>
#include <sys/stat.h>

int main() {
    struct stat st;
    char filename[20];

    printf("Enter filename: ");
    scanf("%s", filename);

    if (stat(filename, &st) == 0) {
        printf("\nFile: %s\n", filename);
        printf("Owner UID: %d\n", st.st_uid);
        printf("Group GID: %d\n", st.st_gid);
        printf("Permissions: %o\n", st.st_mode & 0777);

        printf("\nUser Permissions:\n");
        printf("Owner: %s\n", (st.st_mode & S_IRUSR) ? "Read " : "");
        printf("%s\n", (st.st_mode & S_IWUSR) ? "Write " : "");
        printf("%s\n", (st.st_mode & S_IXUSR) ? "Execute" : "");

        printf("\nGroup: %s\n", (st.st_mode & S_IRGRP) ? "Read " : "");
        printf("%s\n", (st.st_mode & S_IWGRP) ? "Write " : "");
        printf("%s\n", (st.st_mode & S_IXGRP) ? "Execute" : "");

        printf("\nOthers: %s\n", (st.st_mode & S_IROTH) ? "Read " : "");
        printf("%s\n", (st.st_mode & S_IWOTH) ? "Write " : "");
        printf("%s\n", (st.st_mode & S_IXOTH) ? "Execute" : "");
    } else {
        perror("stat failed");
    }

    return 0;
}
